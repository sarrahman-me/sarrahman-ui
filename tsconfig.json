{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist/",
    "noEmit": false,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/stories", "src/app"]
}
